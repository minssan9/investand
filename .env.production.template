# ===================================================================
# KOSPI Fear & Greed Index - Production Environment Configuration
# ===================================================================
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to version control

# ===================================================================
# APPLICATION SETTINGS
# ===================================================================
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# ===================================================================
# DATABASE CONFIGURATION (PostgreSQL for Production)
# ===================================================================
# Production PostgreSQL database
DATABASE_URL=postgresql://fg_user:your_secure_password@database:5432/fg_index_prod
DATABASE_NAME=fg_index_prod
DATABASE_USER=fg_user
DATABASE_PASSWORD=CHANGE_ME_SECURE_PASSWORD_32_CHARS

# Database connection pool settings (optimized for production)
DB_CONNECTION_POOL_MIN=5
DB_CONNECTION_POOL_MAX=20
DB_CONNECTION_TIMEOUT=30000
DB_QUERY_TIMEOUT=15000

# ===================================================================
# CACHE CONFIGURATION (Redis)
# ===================================================================
# Production Redis instance
REDIS_URL=redis://:your_redis_password@redis:6379/0
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_32_CHARS

# ===================================================================
# SECURITY CONFIGURATION
# ===================================================================
# JWT secret for authentication (MUST be 32+ characters)
JWT_SECRET=CHANGE_ME_JWT_SECRET_MINIMUM_32_CHARACTERS_LONG_FOR_SECURITY

# Admin credentials for protected routes
ADMIN_PASSWORD=CHANGE_ME_SECURE_ADMIN_PASSWORD

# ===================================================================
# KOREAN FINANCIAL DATA APIs (REQUIRED)
# ===================================================================
# Korea Investment & Securities API
KIS_API_KEY=your_korea_investment_api_key
KIS_API_SECRET=your_korea_investment_api_secret

# Bank of Korea Economic Statistics API
BOK_API_KEY=your_bank_of_korea_api_key

# DART (Data Analysis, Retrieval and Transfer System) API
DART_API_KEY=your_dart_api_key

# ===================================================================
# EXTERNAL CRYPTOCURRENCY APIs (Optional)
# ===================================================================
# Upbit Exchange API (for crypto sentiment data)
UPBIT_ACCESS_KEY=your_upbit_access_key
UPBIT_SECRET_KEY=your_upbit_secret_key

# ===================================================================
# MONITORING & ALERTS (HIGHLY RECOMMENDED)
# ===================================================================
# Slack webhook for alerts and notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email for system alerts
ALERT_EMAIL=alerts@investand.voyagerss.com

# ===================================================================
# PERFORMANCE & RATE LIMITING (Production Optimized)
# ===================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500
CACHE_TTL=1800

# ===================================================================
# SSL/TLS CONFIGURATION
# ===================================================================
# Email for Let's Encrypt certificate
CERTBOT_EMAIL=admin@investand.voyagerss.com

# ===================================================================
# BACKUP CONFIGURATION (S3 for Production)
# ===================================================================
# AWS S3 configuration for database backups
BACKUP_S3_BUCKET=fg-index-backups-prod
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key
BACKUP_S3_REGION=ap-northeast-2

# ===================================================================
# MONITORING & METRICS
# ===================================================================
# Enable production monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# APM/Error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_newrelic_key_here

# ===================================================================
# SECURITY HEADERS & CORS (Production)
# ===================================================================
CORS_ORIGINS=https://investand.voyagerss.com,https://www.investand.voyagerss.com
ENABLE_HELMET_SECURITY=true
ENABLE_RATE_LIMITING=true

# ===================================================================
# GITHUB CONTAINER REGISTRY (for CI/CD)
# ===================================================================
GITHUB_REPOSITORY=minssan9/kospi-fg-index

# ===================================================================
# DOCKER SWARM / CLUSTER CONFIGURATION (if using)
# ===================================================================
# Docker swarm node role
DOCKER_NODE_ROLE=manager
DOCKER_STACK_NAME=fg-index

# ===================================================================
# LOGGING CONFIGURATION
# ===================================================================
# Log retention in days
LOG_RETENTION_DAYS=30
LOG_MAX_FILES=10
LOG_MAX_SIZE=10MB

# ===================================================================
# FEATURE FLAGS (Production)
# ===================================================================
ENABLE_SCHEDULER=true
ENABLE_API_DOCS=false
ENABLE_DEBUG_ROUTES=false
ENABLE_PLAYGROUND=false